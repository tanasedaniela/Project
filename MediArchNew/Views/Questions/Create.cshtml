@model Data.Domain.ServiceInterfaces.Models.QuestionViewModels.QuestionCreateModel

@{
    ViewData["Title"] = "Question - Create";
    var uid = TempData["UId"];
}
<div class="General_remake">
    <h2>@ViewData["Title"]</h2>

    <hr />

    <div class="row_login">
        <div class="Login_labels">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="UserId" class="input_remake" value="@uid" type="hidden" />
                    <span asp-validation-for="UserId" class="text-danger" type="hidden"></span>
                </div>
                <div class="form-group">
                    <b>Text</b>
                    <input asp-for="Text" class="input_remake" placeholder="Question.."/>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="button_remake" />
                </div>
            </form>

            <div>
                <a asp-action="QuestionsPaginated">Go back </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



