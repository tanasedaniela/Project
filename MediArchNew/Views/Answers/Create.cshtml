@model Data.Domain.Entities.Answer

@{
    ViewData["Title"] = "Create";
}

@{
    var save = TempData["Id"];
    var userxd = TempData["myVar"];
}

<h2>Create</h2>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-id="@save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- O sa se ia automat in viitor -->
            <div class="form-group">
                <!-- <label asp-for="UserId" class="control-label" type="hidden"></label> -->
                <input asp-for="UserId" class="form-control" value="@save" type="hidden" />
                <!-- <span asp-validation-for="UserId" class="text-danger" type="hidden"></span> -->
            </div>

            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" value="@userxd" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
