@{
    ViewData["Title"] = "MediArch";
}
<br />

<br />
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3500">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Banner1.png" alt="ASP.NET" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/Banner2.png" alt="Visual Studio" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/Banner3.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="info_about_us_p">
                    For more information about us, 
                    <a asp-area="" asp-controller="Home" asp-action="About" class="a_link_carousel">press here</a>
                </p>
            </div>
        </div>
        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row_Index">
    @{var Current_Time = DateTime.Now.Hour; }
    @if (Current_Time < 5)
    {
        <h1>Good night!</h1>
    }
    @if (Current_Time >= 5 && Current_Time < 12)
    {
        <h1>Good morning!</h1>
    }
    @if (Current_Time >= 12 && Current_Time < 18)
    {
        <h1>Good afternoon!</h1>
    }
    @if (Current_Time >= 18 && Current_Time < 22)
    {
        <h1>Good evening!</h1>
    }
    @if (Current_Time >= 22)
    {
        <h1>Good night!</h1>
    }

    <h2><b class="Text_Medium">MediArch</b> is a medical-oriented website that aims to make your life easier, by gathering all the information from various doctors you have had at least one consultation.</h2>
    <h2>Gain full access to your results right now!</h2>
    <h2>To discover all our features, please watch this <a href="https://www.youtube.com/watch?v=vyrRXXXsX2M&feature=youtu.be">introduction video</a>.</h2>

    @if (User.Identity.IsAuthenticated)
    {
        <p></p>
    }
    else
    {
        <h3>In order to join us, create an account, and you're ready to go!</h3>
    }

    <h4 id="Current_Date"></h4>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
    
        setInterval(function () {
            refreshClock();
        });

        function refreshClock() {
            const NameOfMonths = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
            var currentdate = new Date();
            var datetime = "Current date: " + currentdate.getDate() + " "
                + NameOfMonths[currentdate.getMonth()] + " "
                + currentdate.getFullYear() + "<br>Current time: ";
            if (currentdate.getHours() < 10) {
                datetime = datetime + "0";
            }
            datetime = datetime + currentdate.getHours() + ":";
            if (currentdate.getMinutes() < 10) {
                datetime = datetime + "0";
            }
            datetime = datetime + currentdate.getMinutes() + ":";
            if (currentdate.getSeconds() < 10) {
                datetime = datetime + "0";
            }
            datetime = datetime + currentdate.getSeconds();
            document.getElementById("Current_Date").innerHTML = datetime;
        }
    });
</script>